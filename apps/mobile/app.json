{
  "expo": {
    "name": "Myhrvold Service",
    "slug": "myhrvold-service",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "myhrvold",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#003366"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "no.myhrvold.service",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Brukes for 책 ta bilder av skader og utstyr",
        "NSPhotoLibraryUsageDescription": "Brukes for 책 velge bilder fra biblioteket",
        "NSLocationWhenInUseUsageDescription": "Brukes for 책 vise din posisjon p책 kartet"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#003366"
      },
      "package": "no.myhrvold.service",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      ["expo-camera", { "cameraPermission": "Tillat tilgang til kamera" }],
      ["expo-image-picker", { "photosPermission": "Tillat tilgang til bilder" }],
      ["expo-location", { "locationWhenInUsePermission": "Tillat tilgang til posisjon" }]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": { "origin": false },
      "eas": { "projectId": "your-project-id" }
    },
    "owner": "myhrvoldgruppen"
  }
}
